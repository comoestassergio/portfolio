---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";

const projects = [
    {
        name: 'Resumatiq',
        descriptionShort: 'An easy to use resume creator',
        descriptionFull: 'It is an easy to use résumé constructor. It walks you through all the steps and gives a complete CV at the end. You can save it as a PDF and use to apply for your dream job.',
        slogan: 'Creating résumés made as easy as never before.',
        stack: ['React', 'TailwindCSS', 'DaisyUI'],
        preview: 'https://resumatiq.netlify.app/',
        code: 'https://github.com/comoestassergio/resume-creator',
        image: '../../public/assets/resumatiq.png',
    },
    {
        name: 'Rice&Fish',
        descriptionShort: "It's a restaurant in my hometown",
        descriptionFull: 'Their business is quite small and lacking a website. So I figured I could make one as one of my projects. The page is an SPA with all its content rendered into one page. I made the rendering look and feel as close to rendering components in React as I could.',
        slogan: null,
        stack: ['HTML', 'CSS', 'Javascript', 'Webpack'],
        preview: 'https://riceandfish.netlify.app/',
        code: 'https://github.com/comoestassergio/restaurant-page',
        image: '../../public/assets/riceandfish.png',
    },
]
---

<Layout title='projects'>
    <ul class="grid grid-cols-1 content-center place-items-center gap-4 mt-24 mx-10 pb-10 md:flex md:flex-wrap md:items-start md:justify-center">
        {projects.map(project => (
            <Card 
                name={project.name} 
                descriptionShort={project.descriptionShort} 
                descriptionFull={project.descriptionFull} 
                slogan={project.slogan} 
                stack={project.stack} 
                code={project.code}
                preview={project.preview}
                image={project.image}
            />
        ))}
    </ul>
</Layout>